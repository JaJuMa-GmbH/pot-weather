<powertoys xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Jajuma_PowerToys:etc/jajuma_powertoys.xsd">
    <!--    Example weather widget without magewire-->
    <dashboard id="default_weather" class="Jajuma\PotWeather\Block\PowerToys\Weather">
        <label translate="true">Weather widget</label>
        <arguments>
            <argument name="enable">true</argument>
            <argument name="template">Jajuma_PotWeather::custom_widget/weather.phtml</argument>
            <argument name="lazyload">true</argument>
            <argument name="cache_lifetime">30</argument>
            <argument name="sort_order">1</argument>
            <argument name="acl_resource"></argument>
        </arguments>
    </dashboard>
</powertoys>
